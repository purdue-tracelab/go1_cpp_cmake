<mujoco model = "platform">
    <compiler angle="radian"/>
    <option timestep="0.002"/>
    <worldbody>
        <!-- The platform-->
        <body name="platform" pos="0 0 0.5">
            <light name="main_light" pos="0 0 3" dir="0 0 -1" diffuse="1 1 1" specular="0.3 0.3 0.3" />
            <inertial pos="0 0 0" mass="1" diaginertia="0.5 0.5 0.5"/>
            <joint name="platform_slide" type="slide" axis="0 1 0" damping="1000"/>
            <joint name="platform_pitch" type="hinge" axis="0 1 0" damping="1000"/>
            <geom name="platform.geom" type="box" size="2 2 0.025" rgba="0.6 0.3 0.3 1"/>
        </body>
    </worldbody>

    <actuator>
        <position name="slide_motor" joint="platform_slide" kp="10000" kv="200"/>
        <position name="pitch_motor" joint="platform_pitch" kp="10000" kv="200"/>
    </actuator>

    <keyframe>
        <key name="start" 
            qpos="0 0"
            ctrl="0 0"/>
    </keyframe>
</mujoco>